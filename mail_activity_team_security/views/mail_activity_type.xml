<odoo>

    <record id="mail_activity_type_view_form" model="ir.ui.view">
        <field name="model">mail.activity.type</field>
        <field
            name="inherit_id"
            ref="mail_activity_security.mail_activity_type_view_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//p[@name='activity_security_info']//ul/li[last()]"
                position="before"
            >
